{
  "name": "kolek-ta",
  "version": "1.0.0",
  "description": "Web-based waste collection management system with geospatial optimization",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:e2e": "npx playwright test tests/*.spec.js --ignore-snapshots",
    "test:a11y": "npx playwright test tests/accessibility.spec.js",
    "test:mobile": "npx playwright test tests/mobile.spec.js",
    "test:visual": "npx playwright test tests/visual.spec.js",
    "test:visual:update": "npx playwright test tests/visual.spec.js --update-snapshots",
    "test:api": "npx playwright test tests/api.spec.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "jest --coverage --testPathPatterns=tests/unit"
  },
  "keywords": [
    "waste-management",
    "geospatial",
    "routing",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "puppeteer": "^24.32.0",
    "supertest": "^7.1.4"
  }
}
